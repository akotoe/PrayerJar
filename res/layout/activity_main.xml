<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:orientation="vertical">
	
	<ListView
	    android:id="@+id/list"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/bottom_control_view"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/headerDividerBottom"
	    android:divider="#b5b5b5"
	    android:dividerHeight="0.5dp"
	    android:listSelector="@drawable/list_selector" />

	<RelativeLayout
	    android:id="@+id/top_control_view"
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:background="@drawable/straight_edges" >

	    	<View
	    	    android:id="@+id/configBarBlack"
	    	    android:layout_width="2dp"
	    	    android:layout_height="fill_parent"
	    	    android:layout_alignParentRight="true"
	    	    android:layout_alignParentTop="true"
	    	    android:layout_marginRight="44dp"
	    	    android:background="@drawable/engraved" />

	    	<TextView
	    	    android:id="@+id/appName"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_alignParentLeft="true"
	    	    android:layout_centerVertical="true"
	    	    android:textSize="25dip"
	    	    android:textStyle="bold"
	    	    android:layout_marginLeft="10dp"
	    	    android:text="@string/app_name" />

	</RelativeLayout>
	<View
	    android:id="@+id/headerDividerBottom"
	    android:layout_width="fill_parent"
	    android:background="#414141"
	    android:layout_height="1dp"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/top_control_view">
	    
	</View>
	<View
	    android:id="@+id/headerDividerTop"
	     android:layout_alignParentRight="true"
	    android:layout_width="fill_parent"
	    android:background="#1760A0"
	    android:layout_height="1dp"
	    android:layout_alignParentLeft="true"
	    >
	    
	</View>
	
	<RelativeLayout
	    android:id="@+id/bottom_control_view"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/straight_edges" >

	    	<View
	    	    android:id="@+id/configBarBlack2"
	    	    android:layout_width="2dp"
	    	    android:layout_height="fill_parent"
	    	    android:layout_alignParentTop="true"
	    	    android:layout_marginLeft="25dp"
	    	    android:layout_toRightOf="@+id/vwCompose"
	    	    android:background="@drawable/engraved" />

	    	<TextView
	    	    android:id="@+id/vwCompose"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_alignParentLeft="true"
	    	    android:layout_centerVertical="true"
	    	    android:layout_marginLeft="28dp"
	    	    android:text="New Prayer"
	    	    android:textSize="17dp"
	    	    android:textStyle="normal" />

	</RelativeLayout>

</RelativeLayout>

